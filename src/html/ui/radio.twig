{% set props = ({
  class: "",
  validate: "",
  name: "",
  type: "radio",
  value: "",
  children: "",
})|merge(props ?: {}) %}

<label class="radio radio--type--{{ props.type }} js-radio group{{ props.class ? " " ~ props.class }}">
  <input 
    class="radio__input js-radio-field" 
    name="{{ props.name }}" 
    value="{{ props.value }}" 
    type="{{ props.type }}"
    {{ props.validate ? " data-validate='" ~ props.validate ~ "'" }}
  >
  <span class="radio__control">
    {% if props.type == "checkbox" %}
      {% include "./icon.twig" with {
        props: {
          class: "block w-6 h-6 fill-none",
          href: "ic-checked"
        }
      } %}
    {% endif %}
  </span>
  <div class="radio__content">{{ props.children }}</div>
</label>